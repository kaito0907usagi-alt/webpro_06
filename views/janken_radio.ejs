        <label for="janken2">チョキ</label><br>
        <input type="radio" name="hand" id="janken3"value="3">
        <label for="janken3">パー</label><br>
        <label for="hand">何を出す？</label>
        <input type="submit" value="じゃんけん　ポン">
        <input type="hidden" name="win" value="<%= win %>">
        <input type="hidden" name="total" value="<%= total %>">
    </form>   
</body>
</html>